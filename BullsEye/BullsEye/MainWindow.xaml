<Window x:Class="BullsEye.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BullsEye"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Bull's Eye" FontFamily="Algerian" FontSize="48" Foreground="Black"
                   HorizontalAlignment="Center" VerticalAlignment="Center" Width="250" Height="75" />
        <Button x:Name="PlayButton" Grid.Row="1" Width="200" Height="60"
                Content="שחק" FontSize="24" FontWeight="Bold" Click="PlayButton_Click" FontFamily="Agency FB"/>
        <Button x:Name="howToPlayButton" Grid.Row="2" Width="200" Height="60" 
                Content="הוראות" FontSize="24" FontWeight="Bold" Click="howToPlayButton_Click"/>
        <Button x:Name="levalsButoon" Grid.Row="3" Width="200" Height="60" 
                Content="בחירת רמה" FontSize="24" FontWeight="Bold" Click="levalsButoon_Click" />

    </Grid>
</Window>
